@{
    ViewBag.Title = "Buy pictures";
}

<!DOCTYPE html>
<html>
<head>
    <title>BuyPics: @ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <h2>@ViewBag.Title</h2>
    <div class="product-info">
        <img src="~/img/redsea1.jpg" />
        <h3>Scorpion fishes at night</h3>
        <ul class="product-props">
            <li>Price: $9.99</li>
            <li>Photographer: </li>
            <li>Title: </li>
            <li>Description: Scorpion fishes at night</li>
        </ul>
        <button id="buyButton">Buy</button>
    </div>

    <div id="theForm">
        <form>
            <label>Your Name:</label>
            <br />
            <input />
            <br />
            <label>Email:</label>
            <br />
            <input type="email" />
            <br />
            <label>Subject:</label>
            <br />
            <input type="text" />
            <br />
            <label>Message:</label>
            <br />
            <textarea rows="4"></textarea>
            <br />
            <input type="submit" value="Send Message" />
        </form>
    </div>

    <div>
        <div id="loginToggle">Login</div>
        <form class="popup-form">
            <div>
                <label>Username</label>
                <input />
            </div>
            <div>
                <label>Password</label>
                <input type="password" />
            </div>
            <div>
                <input type="checkbox" />
                <label>Remember me?</label>
            </div>
            <div>
                <input type="submit" value="login" />
            </div>
        </form>
    </div>

    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/js/BuyPics.js"></script>
</body>
</html>