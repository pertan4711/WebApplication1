@{
    ViewBag.Title = "Buy pictures";
}
@section Scripts {
    <script src="~/js/BuyPics.js"></script>
}
<div class="row">
    <div class="col-md-9">
        <div class="product-info">
            <img src="~/img/redsea1.jpg" />
            <h3>Scorpion fishes at night</h3>
            <ul class="product-props">
                <li>Price: $9.99</li>
                <li>Photographer: </li>
                <li>Title: </li>
                <li>Description: Scorpion fishes at night</li>
            </ul>
            <button id="buyButton" class="btn btn-success">Buy</button>
        </div>

        <div id="theForm">
            <form>
                <label>Your Name:</label>
                <br />
                <input />
                <br />
                <label>Email:</label>
                <br />
                <input type="email" />
                <br />
                <label>Subject:</label>
                <br />
                <input type="text" />
                <br />
                <label>Message:</label>
                <br />
                <textarea rows="4"></textarea>
                <br />
                <input type="submit" value="Send Message" />
            </form>
        </div>

        <div>
            <div id="loginToggle">Login</div>
            <form class="popup-form">
                <div>
                    <label>Username</label>
                    <input />
                </div>
                <div>
                    <label>Password</label>
                    <input type="password" />
                </div>
                <div>
                    <input type="checkbox" />
                    <label>Remember me?</label>
                </div>
                <div>
                    <input type="submit" value="login" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-3">
        <p>Photo buying products.</p>
    </div>
</div>
